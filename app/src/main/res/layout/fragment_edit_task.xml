<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/task_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:inputType="text" />

    <EditText
        android:id="@+id/task_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/task_creation_time_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created at: 9:00 AM"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/task_due_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Due Time" />

    <Switch
        android:id="@+id/task_status_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark as Completed"
        android:paddingTop="8dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/task_notification_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Notification"
        android:paddingTop="8dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Spinner
        android:id="@+id/task_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:prompt="@string/select_category" />

    <Button
        android:id="@+id/task_attachment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Attachment"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:paddingTop="16dp" />
</LinearLayout>